<head>
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
  <meta charset="utf-8">
  <title>Geocoding service</title>
  <style>
    #map-canvas {
      height: 400px;
      width: 600px;
    }
    #panel {
      padding-bottom: 10px;
    }
  </style>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
  <script>
    var geocoder;
    var map;
    var locations = [];

    function initialize() {
      geocoder = new google.maps.Geocoder();
      var latlng = new google.maps.LatLng(37.775641, -122.413649);
      var mapOptions = {
        zoom: 12,
        center: latlng
      }
      map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
    }

    function codeAddress() {
      var address = document.getElementById('address').value;
      geocoder.geocode( { 'address': address}, function(results, status) {
        if (status == google.maps.GeocoderStatus.OK) {
          map.setCenter(results[0].geometry.location);
          locations.push(results[0]);
          addLocation(results[0], locations.length);
          var marker = new google.maps.Marker({
              map: map,
              position: results[0].geometry.location
          });
        } else {
          alert('Geocode was not successful for the following reason: ' + status);
        }
      });
    }

    function addLocation(location, locationCount) {
      locationsFormInputsDiv = document.getElementById('locations-form-inputs');
      newLocationFormHtmlContent = '';
      lat = location.geometry.location.k;
      lng = location.geometry.location.B;
      locationNameInput = locationCount + '. <input type="text" name="locationname_' + locationCount + '" value="' + location.formatted_address + '">';
      latLngText = '(' + lat + ',' + lng + ')';
      latInput = '<input name="lat_' + locationCount + '" type="hidden" value="' + lat +'">';
      lngInput = '<input name="lng_' + locationCount + '" type="hidden" value="' + lng +'">';
      newLocationFormHtmlContent += locationNameInput + ' ' + latLngText + latInput + lngInput + '<br>';
      locationsFormInputsDiv.innerHTML += newLocationFormHtmlContent;
    }

    google.maps.event.addDomListener(window, 'load', initialize);
  </script>
</head>


<body>
<h2>Add locations</h2>
  <div id="panel">
    <input id="address" type="textbox" value="155 Ninth Street, SF, CA">
    <input type="button" value="Add a location" onclick="codeAddress()">
  </div>
  <div id="map-canvas"></div>
  <div id="locations">
    <h3>Locations</h3>
    <form name="locations" action="locations" method="post">
      <div id="locations-form-inputs">
      </div>
      <input type="submit" value="Submit locations">
    </form>
  </div>
</body>


