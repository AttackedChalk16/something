<head>
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
  <meta charset="utf-8">
  <style>
    #map-canvas {
      height: 200px;
      width: 600px;
    }
    #panel {
      padding-bottom: 10px;
    }
  </style>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
  <script>
    var geocoder;
    var map;

    function initializeMap() {
      geocoder = new google.maps.Geocoder();
      var latlng = new google.maps.LatLng(37.775641, -122.413649);
      var mapOptions = {
        zoom: 12,
        center: latlng
      }
      map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
    }

    function geocodeAddress() {
      var address = document.getElementById('address').value;
      geocoder.geocode( { 'address': address}, function(results, status) {
        if (status == google.maps.GeocoderStatus.OK) {
          topResult = results[0];
          map.setCenter(topResult.geometry.location);
          addLocation(topResult);
          var marker = new google.maps.Marker({
              map: map,
              position: topResult.geometry.location
          });
        } else {
          alert('Geocode was not successful for the following reason: ' + status);
        }
      });
    }

    function addLocation(location) {
      locationsFormInputsDiv = document.getElementById('locations-form-inputs');
      lat = location.geometry.location.lat();
      lng = location.geometry.location.lng();
      // Use the street address as the name
      name = location.address_components[0].short_name + " " + location.address_components[1].short_name;
      nameInput = '<input name="locations[][name]" type="hidden" value="' + name + '">';
      latInput = '<input name="locations[][lat]" type="hidden" value="' + lat +'">';
      lngInput = '<input name="locations[][lng]" type="hidden" value="' + lng +'">';
      newContent = name + nameInput + latInput + lngInput + '<br>';
      locationsFormInputsDiv.innerHTML += '<div class="location-input-set"><li>' + newContent + '</li></div>';
    }

    google.maps.event.addDomListener(window, 'load', initializeMap);
  </script>
</head>



  <h2>Add Locations</h2>
  <div id="locations-top-text">
    Enter an address and click the button to add a location. You can change the display name for the location afterward.
  </div>
  <div id="map-canvas"></div>
  <div id="locations">
    <h3>Locations</h3>
    <div id="panel">
      <input id="address" type="textbox" value="155 Ninth Street, SF, CA">
      <input type="button" value="Add a location" onclick="geocodeAddress()">
    </div>
    <form name="locations" method="post">
      <ol>
        <div id="locations-form-inputs">
        </div>
      </ol>
      <input type="submit" value="Submit locations">
    </form>
  </div>


